{% extends 'base.html.twig' %}

{% block title %}Les auteurs{% endblock %}

{% block body %}
    <h1>Author index</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>FirstName</th>
                <th>LastName</th>
                <th>BirthYear</th>
                <th>DeathYear</th>
                <th>Summary</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                {# <td>{{ author.id }}</td> #}
                <td>{{ author.firstName }}</td>
                <td>{{ author.lastName }}</td>
                <td>{{ author.birthYear }}</td>
                <td>{{ author.deathYear }}</td>
                <td>{{ author.summary }}</td>
                <td>{{ author.content }}</td>
                <td>
                    <a href="{{ path('author_show', {'slug': author.slug}) }}">show</a>
                    <a href="{{ path('author_edit', {'slug': author.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('author_new') }}">Create new</a>
{% endblock %}
